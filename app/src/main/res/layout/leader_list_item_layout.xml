<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="username"
        android:id="@+id/username"
        android:textColor="@android:color/holo_red_light"
        android:textSize="14sp"
        android:layout_below="@+id/position"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$1,209,457"
        android:id="@+id/totalScore"
        android:textSize="14sp"
        android:layout_below="@+id/lastContestPlayer"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrow"
        android:src="@drawable/greendownarrow"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:layout_alignTop="@+id/textView19"
        android:layout_toStartOf="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Contest:"
        android:id="@+id/textView19"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="+ $68,000"
        android:id="@+id/lastContestScore"
        android:textColor="#288c2a"
        android:textSize="14sp"
        android:layout_below="@+id/lastContestPlayer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stephen Curry"
        android:id="@+id/lastContestPlayer"
        android:textSize="14sp"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1st"
        android:id="@+id/position"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Win %"
        android:id="@+id/textView21"
        android:textSize="14sp"
        android:layout_alignTop="@+id/arrow"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="76%"
        android:id="@+id/winPercent"
        android:textSize="14sp"
        android:layout_below="@+id/textView21"
        android:layout_alignEnd="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrowDown"
        android:layout_alignTop="@+id/arrow"
        android:layout_toStartOf="@+id/textView21"
        android:src="@drawable/reduparrow"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:maxWidth="30dp"
        android:maxHeight="30dp"/>

</RelativeLayout>